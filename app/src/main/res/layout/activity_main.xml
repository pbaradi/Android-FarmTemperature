<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dip"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_app_name"
        android:id="@+id/txt_app_name"
        android:textSize="32sp"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp"
        android:padding="20dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_temperature"
            android:gravity="center"
            android:id="@+id/txt_temperature"
            android:paddingRight="10dp"
            android:textSize="24sp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_toRightOf="@+id/txt_temperature"
            android:id="@+id/temperature"
            android:background="#ffffff"
            android:textSize="30sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity(%)"
            android:gravity="center"
            android:id="@+id/txt_humidity"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:textSize="24sp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_toRightOf="@+id/txt_humidity"
            android:id="@+id/humidity"
            android:background="#ffffff"
            android:textSize="30sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Set"
            android:id="@+id/btn_set"
            android:textAllCaps="false"
            android:onClick="onClickSet"
            android:layout_margin="20dp"
            android:background="#18891a"
            android:textColor="#ffffff"
            android:textSize="18dp" />


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/btn_set"
            android:onClick="onClickCancel"
            android:layout_margin="20dp"
            android:id="@+id/btn_cancel"
            android:background="#18891a"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>